<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>
    <title>User Profile | ClearTrail CA</title>
<body class="filler">

    <%- include('./partials/nav.ejs') %>
  
        <main class="container mt-4 container-custom text-center">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="Intro colo text-white custom-text-shadow text-center" style="margin-top: 10px; font-size: 60px;">Welcome to your profile</h1>
                    <br>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <!-- User Profile Information -->
                    <div class="container">
                        <img src="<%= profileImageURL %>" alt="User Avatar" class="img-fluid rounded-circle avatar" style="width: 250px; height: 250px;">
                        
                        <div class="container">
                            <div class="jumbotron">
                                <br>
                                <h1 class="text-primary  text-center"><span class="fa fa-user"></span> Profile Information</h1>

                                      <div>
                                        <h5 class = "colo text-white custom-text-shadow">
                                            <br>
                                            <strong>Name</strong>: <%= displayName %><br><br>
                                            <strong>Email</strong>: <%= emails[0].value %>
                                           
                                        </h5>
                                      </div>

                            </div>
                          </div>
                    </div>
                </div>
            </div>
        </main>
    <%- include('./partials/foot.ejs') %>
</body>
</html>