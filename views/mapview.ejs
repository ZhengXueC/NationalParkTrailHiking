<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="bootstrap-5.0.2-dist/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="myCSS.css">
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
    <title>Profile | ClearTrail CA</title>
</head>
<body style="background-image: url('images/pattern1.jpg');" class="filler">
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="Intro2 navbar-brand"  href="#" >ClearTrail CA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Parks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
  
    <main class="container mt-4 container-custom text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="Intro2 text-dark">Parks Nearby</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Park Description -->
                <div class="container">
                    <img src="images/parknearby.jpg" alt="Parks nearby" class="img-fluid">
                    <br>
                    <br>
                    <br>
                    <img src="images/Beaudet.jpg" alt="Parks chosen" class="img-fluid">
                </div>
            </div>
        </div>
    </main>


    <p>This is the location page.</p>

    <div class="blogs content">     
        <h2>All blogs</h2>
    <% if(blogs.length>0) { %>
        <% blogs.forEach(blog => { %>
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
            <% } else { %>
                <p>There are no blogs to display...</p>
                <% } %>
                <br />
                <p>Current temperature in <%= CITY_NAME %> is:</p>
                <p><%= tempInCelsius %></p>
              </div>

    <!-- Bootstrap JS -->
    <script src="bootstrap-5.0.2-dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="myJS.js"></script>
</body>
</html>